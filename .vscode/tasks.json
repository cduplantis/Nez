{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/d",
                    "/c"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "env": {
                "LD_LIBRARY_PATH": "./lib64",
                "DYLD_LIBRARY_PATH": "./osx"
            },
        }},
    "osx": {
        "options": {
            "env": {
                "LD_LIBRARY_PATH": "./lib64",
                "DYLD_LIBRARY_PATH": "./osx"
            },
        }
    },
    "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "Build: .NET 5 Debug",
            "command": "dotnet",
            "args": [
                "build",
                "./engen.fsproj",
                "-p:SolutionDir=${workspaceFolder}/",
                "-p:Platform=x64"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
    ]
}